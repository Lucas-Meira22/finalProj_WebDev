<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="personalFinacialTrack.CategoriesPage"
    Title="Categories"
    BackgroundColor="#121212">

    <VerticalStackLayout Padding="16" Spacing="16">

        <!-- Header actions -->
        <HorizontalStackLayout Spacing="12" HorizontalOptions="CenterAndExpand">
            <Button Text="➕ New" Clicked="OnNewCategoryClicked"
                    BackgroundColor="#7B4DFF" TextColor="White" CornerRadius="10"/>
            <Button Text="🔄 Refresh" Clicked="OnRefreshClicked"
                    BackgroundColor="#7B4DFF" TextColor="White" CornerRadius="10"/>
        </HorizontalStackLayout>

        <!-- Category list -->
        <CollectionView x:Name="CategoriesCollection"
                        ItemsSource="{Binding Categories}"
                        VerticalOptions="FillAndExpand"
                        EmptyView="No categories added yet.">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,6"
                           BackgroundColor="#1E1E1E"
                           CornerRadius="12"
                           HasShadow="True">

                        <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto">
                            <!-- Category info -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding Type}"
                                   FontSize="13"
                                   TextColor="LightGray"/>

                            <!-- Edit button -->
                            <Button Grid.RowSpan="2" Grid.Column="1"
                                    Text="✏️"
                                    BackgroundColor="Transparent"
                                    TextColor="LightGreen"
                                    Clicked="OnEditCategoryClicked"/>

                            <!-- Delete button -->
                            <Button Grid.RowSpan="2" Grid.Column="2"
                                    Text="🗑️"
                                    BackgroundColor="Transparent"
                                    TextColor="#FF6B6B"
                                    Clicked="OnDeleteCategoryClicked"/>
                        </Grid>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>



