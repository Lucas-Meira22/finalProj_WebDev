<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personalFinacialTrack.TransactionsPage"
             Title="Transactions"
             BackgroundColor="#121212">

    <VerticalStackLayout Padding="10">

        <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
            <Button Text="Add Transaction"
                    Clicked="OnAddTransactionClicked"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"/>

            <Button Text="Refresh"
                    Clicked="OnRefreshClicked"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"/>
        </HorizontalStackLayout>


        <Label x:Name="EmptyLabel"
               Text="No transactions yet"
               TextColor="Gray"
               FontSize="14"
               HorizontalTextAlignment="Center"
               IsVisible="False"
               Margin="0,20,0,10"/>

        <CollectionView x:Name="TransactionsList" ItemsSource="{Binding Transactions}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" Padding="12" Margin="0,5" BackgroundColor="#1E1E1E">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                            <Label Text="{Binding Note}" 
                                   FontAttributes="Bold" 
                                   FontSize="16"
                                   Grid.Row="0" Grid.Column="0"
                                   TextColor="White" />

                            <Label Text="{Binding Amount, StringFormat='${0:F2}'}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   HorizontalTextAlignment="End"
                                   Grid.Row="0" Grid.Column="1"
                                   TextColor="White" />

                            <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd HH:mm}'}"
                                   FontSize="13"
                                   Grid.Row="1" Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding Type}"
                                   FontSize="13"
                                   Grid.Row="2" Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   TextColor="{Binding Type, Converter={StaticResource TypeToColorConverter}}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>


