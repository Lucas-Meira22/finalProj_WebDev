<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="personalFinacialTrack.NewGoalPage"
             BackgroundColor="#111">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Title -->
            <Label Text="Create New Goal"
                   HorizontalOptions="Center"
                   FontSize="20"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <!-- Add Cover -->
            <Frame WidthRequest="100" HeightRequest="100"
                   BorderColor="#333"
                   CornerRadius="50"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="+" FontSize="40" TextColor="White" HorizontalOptions="Center"/>
                    <Label Text="Add Cover" FontSize="12" TextColor="Gray" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Goal Name -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Goal Name" TextColor="White" FontSize="14"/>
                <Entry Placeholder="e.g. Vacation, New Car, etc." 
                       BackgroundColor="#1c1c1c" 
                       TextColor="White"
                       PlaceholderColor="Gray"/>
            </VerticalStackLayout>

            <!-- Goal Amount -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Goal Amount" TextColor="White" FontSize="14"/>
                <Entry Text="10000" 
                       Keyboard="Numeric"
                       BackgroundColor="#1c1c1c" 
                       TextColor="White"
                       PlaceholderColor="Gray"/>
            </VerticalStackLayout>

            <!-- Currency -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Currency" TextColor="White" FontSize="14"/>
                <Picker Title="Select currency"
                        BackgroundColor="#1c1c1c"
                        TextColor="White"
                        TitleColor="Gray">
                    <Picker.Items>
                        <x:String>USD</x:String>
                        <x:String>EUR</x:String>
                        <x:String>INR</x:String>
                        <x:String>GBP</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>

            <!-- Deadline -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Deadline (Optional)" TextColor="White" FontSize="14"/>
                <DatePicker TextColor="White"
                            BackgroundColor="#1c1c1c"/>
            </VerticalStackLayout>

            <!-- Note -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Note (Optional)" TextColor="White" FontSize="14"/>
                <Editor Placeholder="Add your note..."
                        HeightRequest="80"
                        BackgroundColor="#1c1c1c"
                        TextColor="White"
                        PlaceholderColor="Gray"/>
            </VerticalStackLayout>

            <!-- Color Options -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Color" TextColor="White" FontSize="14"/>
                <HorizontalStackLayout Spacing="15">
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="Purple"/>
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="Orange"/>
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="DodgerBlue"/>
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="LimeGreen"/>
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BackgroundColor="Red"/>
                    <Frame WidthRequest="40" HeightRequest="40" CornerRadius="20" BorderColor="Gray"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Cancel" 
                        BackgroundColor="#333"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="120"/>
                <Button Text="Save" 
                        BackgroundColor="Purple"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
