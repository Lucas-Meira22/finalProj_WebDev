<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:personalFinacialTrack.Resources.Model"
             x:Class="personalFinacialTrack.GoalRecordsPage"
             Title="Goal Records">

    <CollectionView x:Name="recordsList" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:GoalRecord">
                <Frame Margin="0,5" Padding="10" BackgroundColor="#2E2E2E" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="LightGray"/>
                        <Label Text="{Binding Type}" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" TextColor="White"/>
                        <Label Text="{Binding Note}" TextColor="LightGray" FontSize="13"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
