<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personalFinacialTrack.MainPage"
             BackgroundColor="#121212">

    <Grid>

        <!-- Main Grid with padding -->
        <Grid RowDefinitions="Auto, *" Padding="20">

            <!-- Header -->
            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *, Auto" Margin="0,20,0,40">

                <!-- Profile Picture -->
                <Image Source="profile_img.jpg"
                       WidthRequest="40"
                       HeightRequest="40"
                       Aspect="AspectFill"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">
                    <Image.Clip>
                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                    </Image.Clip>
                </Image>

                <!-- App Title -->
                <Label Text="Trezo"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White"
                       Grid.Column="1"/>

                <!-- PRO Badge -->
                <Frame BackgroundColor="#5C3EE8"
                       Padding="10,2"
                       CornerRadius="20"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       Grid.Column="2">
                    <Label Text="PRO"
                           TextColor="White"
                           FontAttributes="Bold"/>
                </Frame>
            </Grid>

            <!-- Main Content -->
            <StackLayout Grid.Row="1" Spacing="30" VerticalOptions="Center" HorizontalOptions="Center">

                <!-- Target Icon -->
                <Image Source="target_icon.png"
                       WidthRequest="120"
                       HeightRequest="120"
                       HorizontalOptions="Center"/>

                <!-- Title -->
                <Label Text="Ready to start saving?"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <!-- Subtitle -->
                <Label Text="You haven't set any savings goals yet."
                       FontSize="16"
                       TextColor="#B0B0B0"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <!-- Button -->
                <Button Text="+ Create Your First Goal"
                        BackgroundColor="#5C3EE8"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        WidthRequest="250"
                        Clicked="CreateNewGoal"
                        HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

        <!-- Floating Plus Button -->
        <Button Text="+"
                BackgroundColor="#5C3EE8"
                TextColor="White"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"/>
    </Grid>
</ContentPage>
