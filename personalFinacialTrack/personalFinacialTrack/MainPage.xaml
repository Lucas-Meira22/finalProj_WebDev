<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personalFinacialTrack.MainPage"
             BackgroundColor="#121212">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- ✅ HEADER -->
        <Frame Grid.Row="0"
               Padding="10"
               HasShadow="False"
               BackgroundColor="Transparent"
               BorderColor="Gray">
            <Grid ColumnDefinitions="Auto,*,Auto">

                <!-- Profile Picture -->
                <Image Source="profile_img.jpg"
                       WidthRequest="40"
                       HeightRequest="40"
                       Aspect="AspectFill"
                       VerticalOptions="Center">
                    <Image.Clip>
                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                    </Image.Clip>
                </Image>

                <!-- Title -->
                <Label Text="Trezo"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White"
                       Grid.Column="1"/>

                <!-- Badge -->
                <Frame BackgroundColor="#5C3EE8"
                       Padding="10,2"
                       CornerRadius="20"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       Grid.Column="2">
                    <Label Text="PRO"
                           TextColor="White"
                           FontAttributes="Bold"/>
                </Frame>
            </Grid>
        </Frame>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" RowDefinitions="*,Auto">

            <!-- Empty State -->
            <StackLayout x:Name="EmptyState"
                         IsVisible="False"
                         Spacing="30"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

                <Image Source="target_icon.png"
                       WidthRequest="120"
                       HeightRequest="120"
                       HorizontalOptions="Center"/>

                <Label Text="Ready to start saving?"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="You haven't set any savings goals yet."
                       FontSize="16"
                       TextColor="#B0B0B0"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Button Text="+ Create Your First Goal"
                        BackgroundColor="#5C3EE8"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        WidthRequest="250"
                        Clicked="CreateNewGoal"
                        HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Goals List -->
            <CollectionView ItemsSource="{Binding Goals}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#222"
                   Padding="10"
                   CornerRadius="12"
                   Margin="0,8"
                   HasShadow="False">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.GoalTappedCommand}"
                        CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">

                                <Frame WidthRequest="20"
                                       HeightRequest="20"
                                       CornerRadius="10"
                                       BackgroundColor="{Binding Color}"
                                       VerticalOptions="Center" />

                                <VerticalStackLayout Grid.Column="1" Spacing="6">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding Name}" 
                                   TextColor="White"
                                   FontSize="16"/>
                                        <Label Text="{Binding Amount, StringFormat='${0:N0}'}"
                                   TextColor="White"
                                   FontSize="16"
                                   Grid.Column="1"/>
                                    </Grid>

                                    <ProgressBar Progress="{Binding Progress}"
                                     ProgressColor="{Binding Color}"
                                     BackgroundColor="#444"
                                     HeightRequest="6"/>

                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding CurrentAmount, StringFormat='${0:N0}'}"
                                   TextColor="LightGray"
                                   FontSize="14"/>
                                        <Label Text="{Binding Remaining, StringFormat='${0:N0}'}"
                                   TextColor="LightGray"
                                   FontSize="14"
                                   Grid.Column="1"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <!--Floating add btn-->
            <Button  IsVisible="{Binding HasGoals}"
                Text="+"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#5C3EE8"
                TextColor="White"
                FontAttributes="Bold"
                AbsoluteLayout.LayoutBounds="0.95,0.95,60,60"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="CreateNewGoal"/>

        </Grid>
    </Grid>
</ContentPage>
