<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="personalFinacialTrack.BudgetsPage"
             Title="Budgets"
             BackgroundColor="#121212">

    <VerticalStackLayout Padding="10">

        <Label Text="Budgets (set monthly limits by category)"
               FontSize="16"
               TextColor="White"
               Margin="0,0,0,10"/>

        <HorizontalStackLayout Spacing="10" Margin="0,0,0,10">
            <Button Text="New / Edit Budget"
                    Clicked="OnNewBudgetClicked"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"
                    HorizontalOptions="StartAndExpand"/>

            <Button Text="Refresh"
                    Clicked="OnRefreshClicked"
                    BackgroundColor="#7B4DFF"
                    TextColor="White"
                    HorizontalOptions="End"/>
        </HorizontalStackLayout>

        <CollectionView x:Name="BudgetsCollection">
            <CollectionView.EmptyView>
                <Label Text="No budgets defined yet"
                       TextColor="Gray"
                       HorizontalTextAlignment="Center"
                       Margin="0,20,0,0"/>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" Padding="12" Margin="0,5" BackgroundColor="#1E1E1E">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding CategoryName}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   Grid.Row="0" Grid.Column="0"
                                   TextColor="White" />

                            <Label Text="{Binding LimitAmount, StringFormat='${0:F2}'}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   HorizontalTextAlignment="End"
                                   Grid.Row="0" Grid.Column="1"
                                   TextColor="White" />

                            <ProgressBar Progress="{Binding Progress}"
                                         Grid.Row="1" Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         Margin="0,5,0,0"
                                         ProgressColor="#7B4DFF"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

