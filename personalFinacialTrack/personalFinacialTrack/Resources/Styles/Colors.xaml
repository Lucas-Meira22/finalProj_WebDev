<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkCard">#1E1E1E</Color>
    <Color x:Key="BorderDark">#2A2A2A</Color>

    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#BBBBBB</Color>
    <Color x:Key="TextMuted">#888888</Color>

    <Color x:Key="DeepPurple">#7B4DFF</Color>
    <Color x:Key="DeepPurpleAccent">#9C6DFF</Color>
    <Color x:Key="PurpleGradientStart">#5E35B1</Color>
    <Color x:Key="PurpleGradientEnd">#9575CD</Color>

    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="WarningYellow">#FFB300</Color>
    <Color x:Key="ErrorRed">#FF5252</Color>
    <Color x:Key="InfoBlue">#2196F3</Color>

    <Color x:Key="ButtonPrimaryBackground">#7B4DFF</Color>
    <Color x:Key="ButtonPrimaryText">#FFFFFF</Color>
    <Color x:Key="ButtonSecondaryBackground">#2C2C2C</Color>
    <Color x:Key="ButtonSecondaryText">#FFFFFF</Color>

    <Color x:Key="TabBarBackground">#1C1C1C</Color>
    <Color x:Key="TabBarSelected">#9C6DFF</Color>
    <Color x:Key="TabBarUnselected">#777777</Color>
    <Color x:Key="DividerColor">#2D2D2D</Color>
    <Color x:Key="Highlight">#BB86FC</Color>
    <Color x:Key="ShadowColor">#00000033</Color>

</ResourceDictionary>

