<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="personalFinacialTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:personalFinacialTrack"
    Title="personalFinacialTracker"
    Shell.TabBarBackgroundColor="#1E1E1E"
    Shell.TabBarTitleColor="#9C6DFF"
    Shell.TabBarUnselectedColor="#AAAAAA">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="AppPrimaryButton">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="BackgroundColor" Value="#7B4DFF"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <!--<Style TargetType="Button">
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="BackgroundColor" Value="#7B4DFF"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>-->
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Transactions"
            Icon="transactions.png"
            ContentTemplate="{DataTemplate local:TransactionsPage}" />

        <ShellContent
            Title="Categories"
            Icon="categories.png"
            ContentTemplate="{DataTemplate local:CategoriesPage}" />

        <ShellContent
            Title="Budgets"
            Icon="budgets.png"
            ContentTemplate="{DataTemplate local:BudgetsPage}" />

        <ShellContent
            Title="Reports"
            Icon="reports.png"
            ContentTemplate="{DataTemplate local:ReportsPage}" />
    </TabBar>
</Shell>
